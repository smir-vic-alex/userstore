<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entities.Token" table="TOKENS">
        <id  name="id" column="ID" type="java.lang.Long">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="optimizer">none</param>
                <param name="sequence_name">TOKENS_ID_SEQ</param>
            </generator>
        </id>
        <property name="token" column="TOKEN" type="java.lang.String"/>
        <property name="userId" column="USER_ID" type="java.lang.Long"/>
        <property name="expired" column="EXPIRED" type="java.util.Calendar"/>
    </class>

    <query name="entities.Token.getTokenByName">
        select token from entities.Token as token where token.token= :tokenName
    </query>

</hibernate-mapping>