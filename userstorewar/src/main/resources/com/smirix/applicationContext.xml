<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">

    <bean id="userStoreEndpointService" class="com.smirix.rest.services.UserStoreEndpointService"/>

    <bean id="dbExecutor" class="com.smirix.services.DBExecutor"/>

    <bean id="userStoreService" class="com.smirix.services.UserStoreService">
        <constructor-arg ref="dbExecutor"/>
    </bean>
    <bean id="loginStoreService" class="com.smirix.services.LoginStoreService">
        <constructor-arg ref="dbExecutor"/>
    </bean>
    <bean id="passwordService" class="com.smirix.services.PasswordStoreService">
        <constructor-arg ref="dbExecutor"/>
    </bean>
    <!--<bean class="RestInitializer"/>-->

    <context:annotation-config/>
</beans>